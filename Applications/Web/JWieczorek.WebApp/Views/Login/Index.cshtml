@model JWieczorek.WebApp.Models.LoginModel;
@{
    ViewData["Title"] = "Login";
}

    <div class="row justify-content-md-center">
        <div class="col col-md-6">

            <!-- Material form login -->
            <div class="card">

                <h5 class="card-header info-color white-text text-center py-4">
                    <strong>Sign in</strong>
                </h5>

                <!--Card content-->
                <div class="card-body px-lg-5 pt-0">

                    <!-- Form -->
                    <form class="text-center" style="color: #757575;" method="post" asp-controller="Login" asp-action="Index">
                         
                        <!-- Email -->
                        <div class="md-form">
                            <input type="text" id="username" class="form-control" asp-for="Username">
                            <label for="username">Username</label>
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>

                        <!-- Password -->
                        <div class="md-form">
                            <input type="password" id="password" class="form-control" asp-for="Password">
                            <label for="password">Password</label>
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="d-flex justify-content-around">
                            <div>
                                <!-- Forgot password -->
                                <a href="">Forgot password?</a>
                            </div>
                        </div>

                        <!-- Sign in button -->
                        <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">Sign in</button>

                        <!-- Register -->
                        <p>
                            Not a member?
                            <a href="">Register</a>
                        </p>

                    </form>
                    <!-- Form -->

                </div>

            </div>
            <!-- Material form login -->
        </div>
    </div>